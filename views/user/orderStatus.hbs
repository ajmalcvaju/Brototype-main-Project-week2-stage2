<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Admin Dashboard</title>
    <style>
        body {
            margin: 0%;
            padding: 0%;
        }

        .content {
            display: flex;
            flex-direction: column;
        }

        #aPanel {
            width: 100%;
            display: flex;
            height: 5%;
            justify-content: center;
            margin: 0;
        }

        #aPanel2 {
            width: 100%;
            height: 95%;
            display: flex;
            flex-direction: row;
        }

        .dashboard-menu {
            display: flex;
            flex-direction: column;
            justify-content: center;
            background-color: #949494;
            width: 12%;
        }

        .nav-link {
            color: black;
            margin-left: 10%;
        }

        #so {
            margin-top: 100%;
            font-size: large;
            font-weight: 500;
        }

        .aPanel2-r {
            width: 90%;
        }

        .aPanel2-l {
            width: 10%;
            background-color: #949494;
        }

        .nav-item {
            margin-top: 5%;
            margin-bottom: 5%;
        }

        .nav-link.btn.btn-success {
            width: 100%;
        }

        .row {
            display: flex;
            align-self: center;
        }

        .img {
            width: 100px;
            height: 100px;
        }

        .btn .btn-danger {
            width: 100%;
        }

        .btn .btn-danger {
            width: 100%;
        }
    </style>
</head>

<body>
    <header>
        <div class="content">
            <div id="aPanel">
                <h3>Order Status</h3>
            </div>
           

            <div id="aPanel2">
                <div class="aPanel2-r">
                    <table class="table mt-5" style="">
                        <thead>
                            <tr>
                                <th scope="col">Order Id</th>
                                <th scope="col">Order Date</th>
                                <th scope="col">Product Quantity</th>
                                <th scope="col">Total Price</th>
                                <th scope="col">Status</th>
                                <th scope="col">Expected Arrival</th>
                                <th scope="col">Payment Method</th>
                                <th scope="col">Product Detail</th>
                                <th scope="col">Cancell/Return</th>
                            </tr>
                        </thead>
                       <tbody>
                {{#each order}}
                
                <tr>
                    <td>{{this.orderId}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.productQuantity}}</td>
                    <td>{{this.totalPrice}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.expectedArrival}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td><a href="/orderDetails?orderId={{this.orderId}}"
                            class="btn btn-info">Product Details</a></td>
                    <td><a href="/cancelOrder?orderId={{../_id}}&productId={{this.productId._id}}"
                            class="btn btn-danger"
                            onclick="return confirm('Do You want to Cancell {{this.productId.pname}}?')">Cancell</a>
                    </td>

                </tr>
                <tr>
                    
                    {{/each}}

            </tbody>
                    </table>

                </div>
            </div>
        </div>
        </div>






        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>

        

</body>

</html>