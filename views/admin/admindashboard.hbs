    <script>
        const salesDatas = document.getElementById("order").innerHTML;
          const cleanedSalesData = salesDatas.trim();
          const salesData = JSON.parse(cleanedSalesData);

        function displaySales(data) {
            const salesDataContainer = document.getElementById('sales-data');
            salesDataContainer.innerHTML = '';

            let totalSalesCount = 0;
            let totalOrderAmount = 0;
            let totalDiscount = 0;
            let totalCouponDiscount = 0;
            let totalGst = 0;
            let totalRevenue = 0;

            data.forEach(sale => {
                totalSalesCount++;
                totalOrderAmount += sale.totalPrice;
                totalDiscount += sale.discount;
                totalCouponDiscount += sale.couponDiscount;
                totalGst += sale.gst;
                totalRevenue += sale.totalAmountPay;

                const row = `
                    <tr>
                        <td>${sale.orderId}</td>
                        <td>${sale.date}</td>
                        <td>${sale.userId.fname} ${sale.userId.lname}</td>
                        <td>${sale.totalPrice} ₹</td>
                        <td>${sale.discount} ₹</td>
                        <td>${sale.couponDiscount} ₹</td>
                        <td>${sale.gst} ₹</td>
                        <td>${sale.totalAmountPay} ₹</td>
                    </tr>
                `;
                salesDataContainer.innerHTML += row;
            });

            document.getElementById('overall-sales-count').innerText = `Overall Sales Count: ${totalSalesCount}`;
            document.getElementById('overall-order-amount').innerText = `Overall Order Amount: ${totalOrderAmount} ₹`;
            document.getElementById('overall-discount').innerText = `Overall Discount: ${totalDiscount} ₹`;
            document.getElementById('overall-coupon-discount').innerText = `Overall Coupon Discount: ${totalCouponDiscount} ₹`;
            document.getElementById('overall-gst').innerText = `Overall GST Amount: ${totalGst} ₹`;
            document.getElementById('overall-revenue').innerText = `Overall Revenue: ${totalRevenue} ₹`;

            updateCharts(data);
        }

        function updateCharts(data) {
            const dates = data.map(sale => sale.date);
            const orderAmounts = data.map(sale => sale.totalPrice);
            const revenues = data.map(sale => sale.totalAmountPay);

            const salesChartCtx = document.getElementById('salesChart').getContext('2d');
            const revenueChartCtx = document.getElementById('revenueChart').getContext('2d');

            new Chart(salesChartCtx, {
                type: 'line',
                data: {
                    labels: dates,
                    datasets: [{
                        label: 'Order Amount',
                        data: orderAmounts,
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: { display: true, title: { display: true, text: 'Date' } },
                        y: { display: true, title: { display: true, text: 'Amount (₹)' } }
                    }
                }
            });

            new Chart(revenueChartCtx, {
                type: 'bar',
                data: {
                    labels: dates,
                    datasets: [{
                        label: 'Revenue',
                        data: revenues,
                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: { display: true, title: { display: true, text: 'Date' } },
                        y: { display: true, title: { display: true, text: 'Revenue (₹)' } }
                    }
                }
            });
        }

        function filterReport() {
            const startDate = document.getElementById('start-date').value;
            const endDate = document.getElementById('end-date').value;
            const filteredData = salesData.filter(sale => sale.date >= startDate && sale.date <= endDate);
            displaySales(filteredData);
        }

        function presetFilter() {
            const range = document.getElementById('preset-range').value;
            let filteredData;

            const today = new Date();
            if (range === '1-day') {
                const oneDayAgo = new Date(today.setDate(today.getDate() - 1)).toISOString().split('T')[0];
                filteredData = salesData.filter(sale => sale.date >= oneDayAgo);
            } else if (range === '1-week') {
                const oneWeekAgo = new Date(today.setDate(today.getDate() - 7)).toISOString().split('T')[0];
                filteredData = salesData.filter(sale => sale.date >= oneWeekAgo);
            } else if (range === '1-month') {
                const oneMonthAgo = new Date(today.setMonth(today.getMonth() - 1)).toISOString().split('T')[0];
                filteredData = salesData.filter(sale => sale.date >= oneMonthAgo);
            }

            displaySales(filteredData);
        }

        displaySales(salesData);
    </script>
